{
    "manifest_version": 3,
    "name": "Funserv Integrador - Clínica Personart",
    "version": "1.0.0",
    "description": "Captura autorizações aprovadas do SaudeWeb Funserv e sincroniza com a plataforma Clínica Personart",
    "permissions": [
        "storage",
        "notifications",
        "activeTab"
    ],
    "host_permissions": [
        "http://saudeweb.funservsorocaba.sp.gov.br/*",
        "https://saudeweb.funservsorocaba.sp.gov.br/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://saudeweb.funservsorocaba.sp.gov.br/*",
                "https://saudeweb.funservsorocaba.sp.gov.br/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}